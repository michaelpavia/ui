{
  "name": "riipen-ui",
  "description": "Riipen React component UI kit.",
  "author": {
    "name": "Riipen",
    "email": "admin@riipen.com",
    "url": "https://riipen.com",
    "directory": "packages/riipen-ui"
  },
  "repository": "https://github.com/riipen/ui",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "npm": ">=6.12.0"
  },
  "scripts": {
    "ci:audit": "audit-ci --moderate",
    "ci:test:coverage": "NODE_ENV=test NODE_PATH=./ nyc mocha --opts ./test/unit/ci.mocha.opts",
    "format": "prettier --write \"**/*.{js,jsx}\"",
    "lint": "eslint .",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx}": ["npm run format", "npm run lint", "git add"]
  },
  "peerDependencies": {
    "react": "16.11.0",
    "react-dom": "16.11.0"
  },
  "dependencies": {
    "clsx": "1.0.4",
    "prop-types": "15.6.1",
    "styled-jsx": "3.2.2"
  },
  "devDependencies": {
    "audit-ci": "2.4.2",
    "eslint": "6.5.1",
    "lint-staged": "9.4.2",
    "prettier": "1.18.2"
  }
}
